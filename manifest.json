{
  "manifest_version": 3,
  "name": "呱呱助手",
  "description": "呱呱数据一键下载",
  "version": "1.0.0",
  "author": "qiuxchao",
  "action": {
     "default_title": "呱呱助手",
   	 "default_popup": "popup/index.html"
   },
    
  "default_locale": "zh-CN",
  "icons": {
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
     {
       "matches": ["http://bp.guaguayoupin.com/detail/*"],
       "css": ["content/index.css"],
       "js": ["https://cdn.bootcdn.net/ajax/libs/jquery/3.6.1/jquery.js", "content/index.js"]
     }
   ],
  "permissions": ["storage", "downloads"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/btn_bg.png",
        "images/logo.png",
        "content/index.css",
        "content/index.js",
        "popup/index.js",
        "popup/index.html",
        "popup/index.css",
        "background.js"
      ],
      "matches": [ "http://*/*", "https://*/*" ]
    }
  ]
}